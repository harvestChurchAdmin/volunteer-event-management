# Server configuration
NODE_ENV=development
PORT=3002
APP_BASE_URL=http://localhost:3002
SESSION_SECRET=change-me
DB_PATH=./db/volunteer.db

# Google OAuth for admin login (required for production)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_WORKSPACE_DOMAIN=replace-with-domain

# Volunteer management tokens (in days)
MANAGE_TOKEN_TTL_DAYS=30

# Mail configuration
# Option 1: use a well-known service such as Gmail
MAIL_SERVICE=gmail
MAIL_USER=replace-with-user
MAIL_PASS=replace-with-app-password

# Option 2: comment out MAIL_SERVICE and configure SMTP host/port directly
# MAIL_HOST=
# MAIL_PORT=587
# MAIL_SECURE=false
# MAIL_USER=
# MAIL_PASS=

# Outgoing email headers
MAIL_FROM=replace-with-email-email-address
MAIL_REPLY_TO=replace-with-email-address
