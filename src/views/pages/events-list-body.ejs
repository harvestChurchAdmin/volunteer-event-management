<section class="page-header">
    <h2>Upcoming Volunteer Opportunities</h2>
    <p class="muted">Find a time that works for you and sign up quickly.</p>
</section>

<section class="container">
    <div class="event-list">
        <% events.forEach(event => { %>
            <article class="card">
                <div>
                    <h3><%= event.name %></h3>
                    <div class="event-card-meta">
                        <%= new Date(event.date_start).toLocaleDateString(undefined, { month:'short', day:'numeric', year:'numeric' }) %>
                        &nbsp;â€“&nbsp;
                        <%= new Date(event.date_end).toLocaleDateString(undefined, { month:'short', day:'numeric', year:'numeric' }) %>
                    </div>
                </div>
                <div class="card-actions">
                    <a href="/events/<%= event.event_id %>" class="btn btn-primary">View Slots</a>
                </div>
            </article>
        <% }) %>
    </div>
</section>
